<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE8D0"
    android:orientation="vertical"
    tools:context=".fHalaman1">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/btnGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnA"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGroup1">

            <Button
                android:id="@+id/btnD"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGroup2">

            <Button
                android:id="@+id/btnF"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnG"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnH"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGroup3">

            <Button
                android:id="@+id/btnI"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnJ"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:text=""
                android:textColor="@android:color/transparent"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@id/btnGiveUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score : "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCurrentScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGiveUp"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:text="Give Up"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGroup4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>